<div class="row">
  <%= form_with model: article, local: true do |f| %>
    <% if article&.errors.present? %>
      <% article&.errors.full_messages.each do |item| %>
        <span class="label label-danger">
          <%= item %>
        </span>
        <br>
      <% end %>
    <% end %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", id: :id_article_name %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
        <%= f.text_field :description, class: "form-control", id: :id_article_description %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
        <%= f.select :category_id, categories.pluck(:name, :id) %>
    </div>
    <div class="form-group">
      <%= f.label :author %>
        <%= f.select :author_id, authors.pluck(:name, :id) %>
    </div>
    <div class="form-group">
      <%= f.submit "Article", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
